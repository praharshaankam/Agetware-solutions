{"cells":[{"cell_type":"code","source":["# --- Combine Elements by Overlap ---\n","\n","list_a = [\n","    {\"positions\": [10, 20], \"values\": [\"a\"]},\n","    {\"positions\": [30, 40], \"values\": [\"b\"]}\n","]\n","\n","list_b = [\n","    {\"positions\": [15, 25], \"values\": [\"c\"]},\n","    {\"positions\": [35, 45], \"values\": [\"d\"]}\n","]\n","\n","combined = sorted(list_a + list_b, key=lambda x: x[\"positions\"][0])\n","result = []\n","\n","while combined:\n","    current = combined.pop(0)\n","    i = 0\n","    while i < len(combined):\n","        other = combined[i]\n","        l1, r1 = current[\"positions\"]\n","        l2, r2 = other[\"positions\"]\n","        overlap = min(r1, r2) - max(l1, l2)\n","        length_other = r2 - l2\n","        if overlap > length_other / 2:\n","            current[\"values\"] += other[\"values\"]\n","            combined.pop(i)\n","        else:\n","            i += 1\n","    result.append(current)\n","print(result)\n"],"outputs":[{"output_type":"stream","name":"stdout","text":["[{'positions': [10, 20], 'values': ['a']}, {'positions': [15, 25], 'values': ['c']}, {'positions': [30, 40], 'values': ['b']}, {'positions': [35, 45], 'values': ['d']}]\n"]}],"execution_count":2,"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"PJy8OlJT_c_3","executionInfo":{"status":"ok","timestamp":1753420366220,"user_tz":-330,"elapsed":11,"user":{"displayName":"praharsha ankam","userId":"08121406922244262819"}},"outputId":"6c1e7cb9-05f6-4018-c5c8-b928fafe8624"}}],"metadata":{"colab":{"provenance":[]},"kernelspec":{"display_name":"Python 3","name":"python3"}},"nbformat":4,"nbformat_minor":0}